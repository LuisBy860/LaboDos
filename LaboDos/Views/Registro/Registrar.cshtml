@model  LaboDos.Models.ViewModel.PersonaViewModel
@{
    ViewBag.Title = "Registrar";
}

@using (Html.BeginForm("Registros", "Registro", FormMethod.Post))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    </head>
    <body>

        <div class="animate__animated animate__backInDown">

            <h2>Registro</h2>
            <br />
            @Html.LabelFor(m => m.NombrePersona)
            <br />
            @Html.TextBoxFor(m => m.NombrePersona)
            <br />
            @Html.ValidationMessageFor(m => m.NombrePersona)
            <br />
            @Html.LabelFor(m => m.EdadPersona)
            <br />
            @Html.TextBoxFor(m => m.EdadPersona, new { type = "number" })
            <br />
            @Html.ValidationMessageFor(m => m.EdadPersona, null)
            <br />
            @Html.LabelFor(m => m.DescripcionPersona)
            <br />
            @Html.TextBoxFor(m => m.DescripcionPersona)
            <br />
            @Html.ValidationMessageFor(m => m.DescripcionPersona, null)
            <br />
            <input type="submit" class="btn btn-default" />
        </div>
    </body>
</html>


}




@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

